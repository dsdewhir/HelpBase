    <%= f.label :lastname %><br />
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
    <%= f.label :contactemail %><br />
    <%= f.text_field :contactemail %>
  </div>
  <div class="field">
    <%= f.label "Organization:" %><br />
    <%= collection_select 'contact', 'organization_ids',
